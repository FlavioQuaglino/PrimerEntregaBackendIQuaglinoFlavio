<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-center mb-8 text-indigo-700">{{title}}</h1>

    <!-- FORMULARIO DE FILTROS Y BÚSQUEDA -->
    <form id="filterForm" method="GET" class="mb-8 p-6 bg-gray-50 rounded-xl shadow-lg border border-gray-200">
        <h2 class="text-xl font-semibold mb-4 text-gray-800">Filtros y Ordenamiento</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            
            <!-- BÚSQUEDA GENERAL -->
            <div>
                <label for="query" class="block text-sm font-medium text-gray-700">Buscar (Título/Descripción)</label>
                <input type="text" name="query" id="query" value="{{currentQuery}}" 
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <!-- CATEGORÍA -->
            <div>
                <label for="category" class="block text-sm font-medium text-gray-700">Categoría</label>
                <input type="text" name="category" id="category" value="{{currentCategory}}" 
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <!-- DISPONIBILIDAD (Status) -->
            <div>
                <label for="availability" class="block text-sm font-medium text-gray-700">Disponibilidad</label>
                <select id="availability" name="availability" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- Todos --</option>
                    <option value="true" {{#if (eq currentAvailability 'true')}}selected{{/if}}>Disponible</option>
                    <option value="false" {{#if (eq currentAvailability 'false')}}selected{{/if}}>No Disponible</option>
                </select>
            </div>

            <!-- ORDENAR POR PRECIO -->
            <div>
                <label for="sort" class="block text-sm font-medium text-gray-700">Ordenar Precio</label>
                <select id="sort" name="sort" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- Sin Orden --</option>
                    <option value="asc" {{#if (eq currentSort 'asc')}}selected{{/if}}>Ascendente</option>
                    <option value="desc" {{#if (eq currentSort 'desc')}}selected{{/if}}>Descendente</option>
                </select>
            </div>
            
        </div>

        <div class="mt-6 flex justify-end space-x-4">
            <button type="button" onclick="document.getElementById('filterForm').reset(); window.location.href = '/';" 
                    class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Limpiar Filtros
            </button>
            <button type="submit" 
                    class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Aplicar Filtros
            </button>
        </div>
    </form>
    
    <hr class="my-8">

    <!-- LISTA DE PRODUCTOS -->
    <div class="product-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each products}}
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                <div class="p-4">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">{{this.title}}</h3>
                    <p class="text-gray-600 text-sm mb-3 line-clamp-2">{{this.description}}</p>
                    
                    <div class="flex justify-between items-center mb-3">
                        <span class="text-2xl font-extrabold text-green-600">${{this.price}}</span>
                        <span class="text-xs font-semibold px-2 py-0.5 rounded-full {{#if this.status}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                            {{#if this.status}}Disponible{{else}}Sin Stock{{/if}}
                        </span>
                    </div>

                    <div class="text-xs text-gray-500 space-y-1">
                        <p><strong>Stock:</strong> {{this.stock}} unidades</p>
                        <p><strong>Categoría:</strong> {{this.category}}</p>
                        <p><strong>ID:</strong> <code class="bg-gray-200 p-1 rounded">{{this._id}}</code></p>
                    </div>

                    <button class="mt-4 w-full bg-indigo-500 text-white py-2 rounded-lg font-semibold hover:bg-indigo-600 transition duration-150">
                        Añadir al Carrito
                    </button>
                </div>
            </div>
        {{else}}
            <div class="col-span-full bg-yellow-50 p-4 rounded-lg text-center text-yellow-800">
                No se encontraron productos que coincidan con los filtros aplicados.
            </div>
        {{/each}}
    </div>

    <!-- CONTROLES DE PAGINACIÓN -->
    <div class="mt-8 flex justify-between items-center p-4 bg-gray-50 rounded-xl shadow border border-gray-200">
        <div class="text-sm font-medium text-gray-700">
            Página {{currentPage}} de {{totalPages}}
        </div>

        <nav class="flex space-x-2">
            <!-- Botón Anterior -->
            <a href="{{prevLink}}" class="px-4 py-2 text-sm font-semibold rounded-lg transition duration-150 
                {{#if hasPrevPage}}bg-indigo-100 text-indigo-700 hover:bg-indigo-200{{else}}bg-gray-200 text-gray-500 pointer-events-none{{/if}}">
                &larr; Anterior
            </a>

            <!-- Botón Siguiente -->
            <a href="{{nextLink}}" class="px-4 py-2 text-sm font-semibold rounded-lg transition duration-150
                {{#if hasNextPage}}bg-indigo-600 text-white hover:bg-indigo-700{{else}}bg-gray-200 text-gray-500 pointer-events-none{{/if}}">
                Siguiente &rarr;
            </a>
        </nav>
    </div>
</div>

