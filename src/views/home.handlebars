<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-center mb-8 text-indigo-700">{{title}}</h1>

    <!-- Sección de Filtros y Ordenamiento -->
    <div class="filter-controls max-w-4xl mx-auto bg-gray-50 p-6 rounded-xl shadow-lg mb-8">
        <h2 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2">Filtros y Ordenamiento</h2>
        
        <!-- Formulario que envía los parámetros de consulta (query params) a la misma ruta GET / -->
        <form method="GET" action="/" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 items-end">
            
            <!-- Campo de Búsqueda de Texto (query) -->
            <div class="col-span-full sm:col-span-2">
                <label for="query" class="block text-sm font-medium text-gray-700">Búsqueda (Título/Desc.):</label>
                <input type="text" id="query" name="query" value="{{currentQuery}}" placeholder="Buscar producto..."
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <!-- Filtro por Categoría -->
            <div>
                <label for="category" class="block text-sm font-medium text-gray-700">Categoría:</label>
                <input type="text" id="category" name="category" value="{{currentCategory}}" placeholder="Ej: Fantasía"
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            
            <!-- Ordenamiento (Sort) -->
            <div>
                <label for="sort" class="block text-sm font-medium text-gray-700">Ordenar por Precio:</label>
                <select id="sort" name="sort"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">(Sin ordenar)</option>
                    <!-- Usamos el helper 'eq' definido en app.js -->
                    <option value="asc" {{#if (eq currentSort 'asc')}}selected{{/if}}>Precio Ascendente</option>
                    <option value="desc" {{#if (eq currentSort 'desc')}}selected{{/if}}>Precio Descendente</option>
                </select>
            </div>

            <!-- Filtro por Disponibilidad (availability) -->
            <div>
                <label for="availability" class="block text-sm font-medium text-gray-700">Disponibilidad:</label>
                <select id="availability" name="availability"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">(Todos)</option>
                    <option value="true" {{#if (eq currentAvailability 'true')}}selected{{/if}}>En Stock</option>
                    <option value="false" {{#if (eq currentAvailability 'false')}}selected{{/if}}>Agotado</option>
                </select>
            </div>
            
            <!-- Límite (Limit) - Opcional, pero útil para la paginación -->
             <div>
                <label for="limit" class="block text-sm font-medium text-gray-700">Productos por página:</label>
                <select id="limit" name="limit"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="10" {{#if (eq currentLimit '10')}}selected{{/if}}>10</option>
                    <option value="5" {{#if (eq currentLimit '5')}}selected{{/if}}>5</option>
                    <option value="20" {{#if (eq currentLimit '20')}}selected{{/if}}>20</option>
                </select>
            </div>
            
            <!-- Botón de Aplicar Filtros -->
            <button type="submit" class="lg:col-start-4 sm:col-span-2 lg:col-span-1 bg-indigo-600 text-white py-2 rounded-lg font-semibold hover:bg-indigo-700 transition duration-150 shadow-md">
                Aplicar Filtros
            </button>
        </form>
    </div>

    <!-- Lista de Productos -->
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each products}}
            <div class="product-card bg-white p-6 rounded-xl shadow-lg border border-gray-200 flex flex-col justify-between">
                <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">{{this.title}}</h3>
                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{this.description}}</p>
                    
                    <div class="flex justify-between items-end mb-4">
                        <span class="text-3xl font-extrabold text-green-600">${{this.price}}</span>
                        <span class="text-sm font-semibold {{#if this.status}}text-green-500{{else}}text-red-500{{/if}}">
                            {{#if this.status}}Disponible{{else}}Agotado{{/if}}
                        </span>
                    </div>

                    <div class="text-xs text-gray-500 space-y-1 border-t pt-2">
                        <p>Stock: <span class="font-medium">{{this.stock}}</span> unidades</p>
                        <p>Categoría: <span class="font-medium">{{this.category}}</span></p>
                        <p>ID: <code class="bg-gray-100 p-1 rounded">{{this._id}}</code></p>
                    </div>
                </div>

                <!-- Botón de Añadir al Carrito -->
                <button 
                    onclick="addToCart('{{this._id}}')" 
                    class="mt-4 w-full bg-indigo-600 text-white py-2 rounded-lg font-semibold hover:bg-indigo-700 transition duration-150 shadow-md">
                    Añadir al Carrito
                </button>
            </div>
        {{/each}}
    </div>

    <!-- ⬇️ SECCIÓN DE PAGINACIÓN ⬇️ -->
    <div class="max-w-4xl mx-auto mt-10 flex justify-between items-center p-4 bg-gray-100 rounded-lg shadow-inner">
        <div class="text-gray-600 text-sm">
            Página {{currentPage}} de {{totalPages}}
        </div>

        <div class="flex space-x-3">
            <!-- Botón Anterior -->
            {{#if hasPrevPage}}
                <a href="{{prevLink}}" class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-150 shadow-md">
                    ← Anterior
                </a>
            {{else}}
                <span class="bg-gray-300 text-gray-500 font-semibold py-2 px-4 rounded-lg cursor-not-allowed opacity-70">
                    ← Anterior
                </span>
            {{/if}}

            <!-- Botón Siguiente -->
            {{#if hasNextPage}}
                <a href="{{nextLink}}" class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-150 shadow-md">
                    Siguiente →
                </a>
            {{else}}
                <span class="bg-gray-300 text-gray-500 font-semibold py-2 px-4 rounded-lg cursor-not-allowed opacity-70">
                    Siguiente →
                </span>
            {{/if}}
        </div>
    </div>
    <!-- ⬆️ FIN SECCIÓN DE PAGINACIÓN ⬆️ -->

    <!-- IMPORTANTE: Campo oculto para pasar el ID del carrito al JS -->
    <input type="hidden" id="activeCartId" value="{{activeCartId}}">

    <!-- Script para manejar la lógica de añadir al carrito y filtros -->
    <script src="/js/home.js"></script>

    <!-- Script para manejar la lógica de filtros (asumiendo que tienes un archivo de filtros) -->
    <!-- <script src="/js/filter_logic.js"></script> -->
</div>