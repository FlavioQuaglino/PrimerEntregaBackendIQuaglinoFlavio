<div class="container mx-auto p-4 md:p-8">
    <div class="max-w-xl mx-auto bg-white shadow-xl rounded-lg p-6 md:p-10 text-center">
        <!-- El título se pasa desde el router (ej: 'Error 404' o 'Error') -->
        <h1 class="text-4xl font-bold text-red-600 mb-4">{{title}}</h1>
        
        <!-- El mensaje de error se pasa desde el router (ej: 'Carrito con ID c1 no encontrado.') -->
        <p class="text-gray-700 mb-6 text-lg">{{message}}</p>
        
        {{#if details}}
            <!-- Esto es útil para mostrar detalles técnicos del error, si se pasan -->
            <pre class="bg-gray-100 p-4 rounded text-left overflow-auto text-sm">{{details}}</pre>
        {{/if}}

        <!-- Botón para volver al home de la aplicación -->
        <a href="/" class="inline-block mt-6 px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-700 transition duration-300">
            Volver a la Tienda
        </a>
    </div>
</div>
