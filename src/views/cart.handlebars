<div class="max-w-4xl mx-auto mt-8 bg-white p-6 rounded-xl shadow-2xl">
    <h2 class="text-3xl font-extrabold text-indigo-700 mb-6 border-b pb-2">
        üõí Carrito de Compras (ID: <span class="text-indigo-900">{{cart._id}}</span>)
    </h2>

    {{#if cart.products.length}}
    
        <div class="space-y-4">
            {{#each cart.products}}
                <div class="flex items-center justify-between border-b last:border-b-0 py-3 flex-wrap">
                    <!-- Detalle del Producto (usando el campo 'product' poblado) -->
                    <div class="flex items-start space-x-4 w-full md:w-auto">
                        <div class="flex-shrink-0 w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                            <!-- Icono o Thumbnail de ejemplo -->
                            <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
                        </div>
                        <div class="flex-grow">
                            <h3 class="text-lg font-semibold text-gray-800">{{this.product.title}}</h3>
                            <p class="text-sm text-gray-500">Categor√≠a: {{this.product.category}}</p>
                            <p class="text-sm text-gray-500 hidden sm:block">ID del Producto: <code class="bg-gray-100 px-1 rounded">{{this.product._id}}</code></p>
                        </div>
                    </div>

                    <!-- Cantidad y Precio -->
                    <div class="text-right mt-3 md:mt-0 w-full md:w-auto">
                        <p class="text-xl font-bold text-green-600">
                            ${{this.product.price}}
                        </p>
                        <p class="text-sm text-gray-600 mt-1">
                            Cantidad: <span class="font-bold text-lg">{{this.quantity}}</span>
                        </p>
                    </div>
                </div>
            {{/each}}
        </div>

        <div class="mt-8 pt-4 border-t flex justify-end">
            <!-- Nota: La l√≥gica del total se har√≠a mejor en el router o con un helper. -->
            <p class="text-2xl font-bold text-indigo-800">
                Total Estimado: <span class="text-green-700">A calcular</span>
            </p>
        </div>

        <div class="mt-6 border-t pt-6 flex justify-between flex-wrap gap-4">
            <!-- Botones de Acci√≥n (Simulados) -->
            <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition duration-150 shadow-md flex-grow md:flex-grow-0">
                Vaciar Carrito
            </button>
            <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 shadow-md flex-grow md:flex-grow-0">
                Finalizar Compra
            </button>
        </div>

    {{else}}
        <!-- Mensaje cuando el carrito est√° vac√≠o -->
        <div class="text-center p-12 bg-gray-50 rounded-lg border border-dashed border-gray-300">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Carrito Vac√≠o</h3>
            <p class="mt-1 text-sm text-gray-500">
                Parece que a√∫n no has agregado ning√∫n producto.
            </p>
            <div class="mt-6">
                <a href="/" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Ir a la tienda
                </a>
            </div>
        </div>
    {{/if}}

</div>