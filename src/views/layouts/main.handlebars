<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <!-- ‚úÖ HEADER -->
    <header class="bg-indigo-600 text-white p-4 shadow-lg">
      <div class="max-w-5xl mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">Mi Tienda Backend - Entrega Final</h1>
        <nav class="flex items-center space-x-4">
          <a
            href="/"
            class="hover:text-indigo-200 transition duration-150 font-medium"
            >Home</a
          >
          <a
            href="/realtimeproducts"
            class="hover:text-indigo-200 transition duration-150 font-medium"
            >Real Time Products</a
          >
          <button
            id="cartButton"
            class="bg-white text-indigo-700 font-semibold px-3 py-1 rounded hover:bg-indigo-100 transition"
          >
            üõí Carrito
          </button>
        </nav>
      </div>
    </header>

    <!-- ‚úÖ CONTENIDO PRINCIPAL -->
    <main class="min-h-screen p-6">
      {{{body}}}
    </main>

    <!-- ‚úÖ FOOTER -->
    <footer class="text-center p-4 border-t bg-gray-100 text-gray-600">
      <p>&copy; 2025 Coderhouse Backend</p>
    </footer>

    <!-- ‚úÖ Script del bot√≥n din√°mico del carrito -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById('cartButton');
        btn.addEventListener('click', () => {
          const cartId = localStorage.getItem('cartId');
          if (!cartId) {
            alert('‚ö†Ô∏è Primero debes agregar un producto al carrito.');
          } else {
            window.location.href = `/carts/${cartId}`;
          }
        });
      });
    </script>
  </body>
</html>
